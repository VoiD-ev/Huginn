{
   "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,

      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",

      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "paths": {
         "@api/*": ["../huginn-api/src/*"],
         "@api": ["../huginn-api/src"],
         "@shared/*": ["../huginn-shared/lib/*"],
         "@shared": ["../huginn-shared/lib"]
      }
   },
   "include": ["src", "types.d.ts"],
   "references": [{ "path": "./tsconfig.node.json" }, { "path": "../huginn-api" }, { "path": "../huginn-shared" }]
}
